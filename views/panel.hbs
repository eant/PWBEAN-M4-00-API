<a href="panel/nueva" class="btn btn-success float-right my-3">NEW +</a>
<!-- LISTADO DE PELICULAS -->
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">TITULO</th>
      <th scope="col">ESTRENO</th>
      <th scope="col">ACCIONES</th>
    </tr>
  </thead>
  <tbody>
    <!-- INICIO PELICULA -->
    {{#each films}}
    <tr>
      <th scope="row">{{this.$loki}}</th>
      <td>{{this.titulo}}</td>
      <td>{{this.estreno}}</td>
      <td>
        <a href="actualizar/{{this.$loki}}/" class="btn btn-primary">UPDATE</a>
        <button id="{{this.$loki}}" class="btn btn-danger">DELETE</button>
      </td>
    </tr>
    {{/each}}
    <!-- FIN DE PELICULA -->
  </tbody>
</table>
<!-- FIN DE LAS PELICULAS -->
<script>
  const terminators = document.querySelectorAll("button")

  terminators.forEach(terminator => {

    terminator.onclick = function(){

      if( confirm("Hasta la vista... baby?") ){

        fetch(`http://localhost/api/${this.id}`, { method : "DELETE" }).then(rta => {
          this.parentNode.parentNode.remove()
        })

      }

    }

  })
</script>